<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white_text</item>

    </style>


    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="MyTheme.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/dark_text</item>
    </style>

    <style name="WheelViewStyle">
        <item name="lineSpace">14dp</item>
        <item name="textSize">30sp</item>
        <item name="android:fontFamily">@font/rns_light</item>
        <item name="selectedColor">@color/colorPrimary</item>
        <item name="unselectedColor">#d9d9d9</item>
        <item name="divider">@drawable/date_picker_divider</item>
    </style>

    <style name="WheelViewStyleSmall" parent="WheelViewStyle">
        <item name="lineSpace">12dp</item>
        <item name="textSize">21sp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="radionbutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_drawable</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/rns_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="MultiLineEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white_text</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="fontFamily">@font/rns_regular</item>
        <item name="boxBackgroundColor">@color/white_text</item>
    </style>


    <style name="EditTextFoodex">
        <!--<item name="android:inputType">textCapSentences</item>-->
        <item name="android:gravity">top</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:fontFamily">@font/rns_regular</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:textColorHint">@color/very_dark_text</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

</resources>
