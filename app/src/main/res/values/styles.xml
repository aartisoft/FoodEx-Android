<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white_text</item>

    </style>


    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="InputStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white_text</item>
        <item name="colorAccent">@color/white_text</item>
        <item name="android:textSize">14sp</item>

        <item name="colorControlNormal">@color/white_text</item>
        <item name="colorControlActivated">@color/white_text</item>
        <item name="colorControlHighlight">@color/white_text</item>
    </style>

    <style name="MyTheme.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/dark_text</item>
    </style>
</resources>
