<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileEdit"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/profile_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>
        <com.korlab.foodex.UI.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/dark_text"
            android:textCursorDrawable="@drawable/text_cursor"
            app:met_singleLineEllipsis="true"
            android:maxLength="17"
            android:text="Maxim"
            app:met_helperText="Name"
            app:met_helperTextAlwaysShown="true"
            app:met_helperTextColor="#999999"
            app:met_bottomTextSize="14sp"
            android:inputType="text"/>


        <com.korlab.foodex.UI.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/dark_text"
            android:textCursorDrawable="@drawable/text_cursor"
            app:met_singleLineEllipsis="true"
            android:maxLength="17"
            android:text="Romanyuta"
            app:met_helperText="Surname"
            app:met_helperTextAlwaysShown="true"
            app:met_helperTextColor="#999999"
            app:met_bottomTextSize="14sp"
            android:inputType="text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.korlab.foodex.UI.MaterialEditText
                android:id="@+id/input_birthday"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                app:met_baseColor="@color/black"
                app:met_primaryColor="@color/dark_text"
                android:textCursorDrawable="@drawable/text_cursor"
                app:met_singleLineEllipsis="true"
                android:maxLength="17"
                android:text="09 November, 1998"
                app:met_helperText="Birthday"
                app:met_helperTextAlwaysShown="true"
                app:met_helperTextColor="#999999"
                app:met_bottomTextSize="14sp"
                android:inputType="text"/>
            <LinearLayout
                android:id="@+id/button_birthday"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"/>
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>