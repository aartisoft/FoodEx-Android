<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp135"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginRight="@dimen/dp14"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/dp135"
                android:layout_height="@dimen/dp135"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/dp8"
                app:cardElevation="@dimen/dp0">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/program_1"/>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp14"
                android:paddingLeft="@dimen/dp14"
                android:paddingRight="@dimen/dp14"
                android:paddingBottom="@dimen/dp0"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Smooth Loosing Weight"
                        android:textSize="@dimen/sp15"
                        android:fontFamily="@font/rns_regular"
                        android:textColor="#747474" />
                    <TextView
                        android:id="@+id/small_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:textSize="@dimen/sp13"
                        android:fontFamily="@font/rns_regular"
                        android:text="For comfortable loosing weight. For those with active life style and intensive gym trainings"
                        android:textColor="#747474" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6.32"
                        android:textSize="@dimen/sp14"
                        android:layout_marginBottom="@dimen/dp24"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/rns_regular"
                        android:textColor="#e1101b" />
                    <com.korlab.foodex.UI.MaterialButton
                        android:id="@+id/button_switch_email_phone"
                        android:layout_width="@dimen/dp80"
                        android:layout_alignParentRight="true"
                        android:layout_height="@dimen/dp25"
                        android:layout_marginBottom="@dimen/dp24"
                        android:layout_centerVertical="true"
                        app:mb_borderColor="#e1101b"
                        app:mb_borderWidth="@dimen/dp1"
                        app:mb_buttonColor="@color/white"
                        app:mb_buttonType="raised"
                        app:mb_cornerRadius="@dimen/dp30"
                        app:mb_rippleColor="@color/ripple_color"
                        app:mb_text="Buy"
                        app:mb_textColor="#e1101b"
                        app:mb_textSize="@dimen/sp19" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>








    </android.support.v7.widget.CardView>
</LinearLayout>
