<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rns_medium"
            android:text="What is the delivery of food?"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/very_dark_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rns_light"
            android:text="Choose from several options"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/dark_text" />

        <RadioGroup
            android:id="@+id/input_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/colorPrimary">

            <RadioButton
                android:id="@+id/radio_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Package"
                style="@style/radionbutton"/>

            <RadioButton
                android:id="@+id/radio_bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bag"
                style="@style/radionbutton"/>

            <RadioButton
                android:id="@+id/radio_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                style="@style/radionbutton" />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="1dp"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="30dp"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="CANCEL"
                app:mb_textColor="@color/dark_text"
                app:mb_textSize="14sp"
                android:layout_marginRight="20dp"/>

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="1dp"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="30dp"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="OK"
                app:mb_textColor="@color/colorPrimaryDark"
                app:mb_textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>