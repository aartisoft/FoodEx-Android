<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rns_medium"
                    android:text="Rate our service"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/very_dark_text" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rns_light"
                    android:text="Rate our service in the following areas"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/dark_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rns_medium"
                    android:text="Delivery"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:textColor="@color/very_dark_text"
                    android:layout_weight="30"/>
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rating_delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:clickable="true"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/star"
                    app:starFill="@drawable/star_fill"
                    app:starImageHeight="40dp"
                    app:starImageSize="10dp"
                    app:starImagePadding="20dp"
                    app:starImageWidth="40dp"
                    android:layout_weight="70" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rns_medium"
                    android:text="Food"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:textColor="@color/very_dark_text"
                    android:layout_weight="30"/>
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rating_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:clickable="true"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/star"
                    app:starFill="@drawable/star_fill"
                    app:starImageHeight="40dp"
                    app:starImageSize="10dp"
                    app:starImagePadding="20dp"
                    app:starImageWidth="40dp"
                    android:layout_weight="70" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rns_medium"
                    android:text="Manager"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:textColor="@color/very_dark_text"
                    android:layout_weight="30"/>
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rating_manager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:clickable="true"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/star"
                    app:starFill="@drawable/star_fill"
                    app:starImageHeight="40dp"
                    app:starImageSize="10dp"
                    app:starImagePadding="20dp"
                    app:starImageWidth="40dp"
                    android:layout_weight="70" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rns_medium"
                    android:text="App"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:textColor="@color/very_dark_text"
                    android:layout_weight="30"/>
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rating_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:clickable="true"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/star"
                    app:starFill="@drawable/star_fill"
                    app:starImageHeight="40dp"
                    app:starImageSize="10dp"
                    app:starImagePadding="20dp"
                    app:starImageWidth="40dp"
                    android:layout_weight="70" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rns_medium"
                    android:text="Site"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"
                    android:textColor="@color/very_dark_text"
                    android:layout_weight="30"/>
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rating_site"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:clickable="true"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/star"
                    app:starFill="@drawable/star_fill"
                    app:starImageHeight="40dp"
                    app:starImageSize="10dp"
                    app:starImagePadding="20dp"
                    app:starImageWidth="40dp"
                    android:layout_weight="70" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2x"
                android:fontFamily="@font/rns_light"
                android:text="If you want, you can leave a comment :)"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/dark_text" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_input"
                android:layout_marginTop="@dimen/space_2x"
                style="@style/MultiLineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:gravity="top"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/very_dark_text"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="1dp"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="30dp"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="CANCEL"
                app:mb_textColor="@color/dark_text"
                app:mb_textSize="14sp"
                android:layout_marginRight="20dp"/>

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="1dp"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="30dp"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="SEND"
                app:mb_textColor="@color/colorPrimaryDark"
                app:mb_textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>