                    <!--app:starImagePadding="@dimen/dp20"-->
                    <!--app:starImageWidth="@dimen/dp40"-->
                    <!--android:layout_weight="70" />-->
            <!--</LinearLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp14"
                android:fontFamily="@font/rns_light"
                android:text="If you want, you can leave a comment :)"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/dark_text" />



            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your comments (optional)"
                android:lines="4"
                android:maxLength="300"
                style="@style/EditTextFoodex"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp18"
            android:gravity="end"
            android:orientation="horizontal">

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="@dimen/dp1"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="@dimen/dp30"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="CANCEL"
                app:mb_textColor="@color/dark_text"
                app:mb_textSize="@dimen/sp14"
                android:layout_marginRight="@dimen/dp20"/>

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="@dimen/dp1"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="@dimen/dp30"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="SEND"
                app:mb_textColor="@color/colorPrimaryDark"
                app:mb_textSize="@dimen/sp14" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>