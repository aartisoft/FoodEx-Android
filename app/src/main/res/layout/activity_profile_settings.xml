<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ProfileEdit">

    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:fontFamily="@font/rns_medium"
                    android:text="Notifications"
                    android:textColor="@color/dark_text"
                    android:textSize="19sp" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/wrapper_promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingRight="@dimen/space_4x"
                    android:paddingBottom="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/rns_medium"
                            android:text="Promo notifications"
                            android:textColor="@color/input_text"
                            android:textSize="16sp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/toggle_promo"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:sb_background="@color/white_text"
                            app:sb_checked_color="?colorPrimary"
                            app:sb_show_indicator="false" />

                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/дивайдер" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/wrapper_program"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingRight="@dimen/space_4x"
                    android:paddingBottom="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/rns_medium"
                            android:text="New program notifications"
                            android:textColor="@color/input_text"
                            android:textSize="16sp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/toggle_program"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:sb_background="@color/white_text"
                            app:sb_checked_color="?colorPrimary"
                            app:sb_show_indicator="false" />
                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/дивайдер" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/wrapper_managers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingRight="@dimen/space_4x"
                    android:paddingBottom="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/rns_medium"
                            android:text="Notifications from managers"
                            android:textColor="@color/input_text"
                            android:textSize="16sp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/toggle_managers"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:sb_background="@color/white_text"
                            app:sb_checked_color="?colorPrimary"
                            app:sb_show_indicator="false" />
                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/дивайдер" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/wrapper_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingRight="@dimen/space_4x"
                    android:paddingBottom="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/rns_medium"
                            android:text="Meal notifications"
                            android:textColor="@color/input_text"
                            android:textSize="16sp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/toggle_meal"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:sb_background="@color/white_text"
                            app:sb_checked_color="?colorPrimary"
                            app:sb_show_indicator="false" />
                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:fontFamily="@font/rns_medium"
                    android:text="Type"
                    android:textColor="@color/dark_text"
                    android:textSize="19sp" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/wrapper_vibrations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingRight="@dimen/space_4x"
                    android:paddingBottom="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/rns_medium"
                            android:text="Vibrations"
                            android:textColor="@color/input_text"
                            android:textSize="16sp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/toggle_vibrations"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:sb_background="@color/white_text"
                            app:sb_checked_color="?colorPrimary"
                            app:sb_show_indicator="false" />
                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/дивайдер" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/wrapper_sounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/space_4x"
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingRight="@dimen/space_4x"
                    android:paddingBottom="@dimen/spacing_middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/rns_medium"
                            android:text="Sounds"
                            android:textColor="@color/input_text"
                            android:textSize="16sp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/toggle_sounds"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:sb_background="@color/white_text"
                            app:sb_checked_color="?colorPrimary"
                            app:sb_show_indicator="false" />
                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>